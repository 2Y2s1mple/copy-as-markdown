{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0
    },
    "globals": {
        "chrome": true,
        "browser": true
    },
    "overrides": [
        {
            "files": [ "webpack.*.js" ],
            "env": {
                "node": true
            }
        }
    ]

}
