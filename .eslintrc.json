{
    "env": {
        "browser": true,
        "webextensions": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "ignorePatterns": ["firefox/dist", "chrome/dist", "firefox-mv2/dist", "**/vendor/"],
    "rules": {
        "no-console": 0,
        "import/extensions": [
            "error", "always"
        ]
    }
}
