{
  "name": "copy-as-markdown",
  "version": "2.0.0",
  "description": "Copy Link or Image as Markdown code, a Web Extension",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build-chrome && npm run build-firefox",
    "build-chrome": "TARGET=chrome babel",
    "build-firefox": "TARGET=firefox babel",
    "pack": "npm run clean && npm run build && npm run pack-chrome && npm run pack-firefox",
    "pack-chrome": "cd build/chrome && zip -r ../chrome.zip .",
    "pack-firefox": "web-ext build -s build/firefox -a build/",
    "eslint": "eslint .",
    "clean": "rm -rf ./build/",
    "convert-images": "./utils/convert-images.sh"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "0.0.89",
    "eslint": "^4.19.1",
    "typescript": "^2.9.2",
    "web-ext": "^3.2.0"
  }
}
