{
  "name": "copy-as-markdown",
  "version": "2.0.0",
  "description": "Copy Link or Image as Markdown code, a Web Extension",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-chrome": "sh compile.sh && zip -r build/chrome.zip chrome/",
    "build-firefox": "sh compile.sh && npx web-ext build -s src/ -a build/",
    "watch": "npx nodemon",
    "start-chrome": "npx web-ext run -s chrome/ -t chromium --args chrome://extensions",
    "start-firefox": "npx web-ext run -s firefox/ --firefox-preview --url about:debugging#/runtime/this-firefox",
    "eslint": "eslint .",
    "clean": "rm -rf ./build/*",
    "convert-images": "./utils/convert-images.sh"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.183",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^2.0.19",
    "typescript": "^2.9.2"
  }
}
